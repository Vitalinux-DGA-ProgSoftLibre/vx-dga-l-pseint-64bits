#!/bin/bash
# postinst script for vx-dga-l-pseint
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	configure)

	INSTALLDIR=/usr/share/vitalinux/bin/pseint
	if [ -d $INSTALLDIR ] ; then
		echo "Parece que el directorio existe....borrando"
		rm -rf $INSTALLDIR
	fi

	if test -L /usr/bin/pseint ; then
		rm /usr/bin/pseint
	fi

	if ! test -d /usr/share/vitalinux/bin ; then
		mkdir /usr/share/vitalinux/bin
	fi

	if tar -xz -C /usr/share/vitalinux/bin/ \
		-f /tmp/pseint-l64-20160912.tgz ; then
		# Limpiamos el fichero descargado
		echo "Ok!! Ya se ha descomprimido pseint ... se eliminará el archivo temporal ..."
		rm -rf /tmp/pseint-l64-20160912.tgz
	fi

	# Creamos un enlace simbolico al ejecutable
	if test -f /usr/share/vitalinux/bin/pseint/wxPSeInt && ! test -L /usr/bin/pseint ; then
		chmod +x /usr/share/vitalinux/bin/pseint/wxPSeInt
		ln -s /usr/share/vitalinux/bin/pseint/wxPSeInt /usr/bin/pseint
	else
		echo "Problema ... ya existe algún ejecutable /usr/bin/pseint"
		exit 1
	fi

	;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

